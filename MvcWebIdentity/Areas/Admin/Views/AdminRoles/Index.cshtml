@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<h1 class="bg-info text-black">Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Criar Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>Id</th><th>Nome</th></tr>
    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Editar</a></td>
            <td><form asp-action="Delete" asp-route-id="@role.Id" method="get">
                <button type="submit" class="btn btn-sm btn-danger">Deletar</button>
            </form></td>
        </tr>
    }
</table>